{
  "name": "piny-forest",
  "version": "0.0.0",
  "description": "Component library and design system for Piny",
  "main": "out/index.js",
  "type": "module",
  "files": [
    "out",
    "ref"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "rm -rf out && tsc --outDir out",
    "test": "TS_JEST_DISABLE_VER_CHECKER=true jest",
    "size": "size-limit",
    "release": "np",
    "preversion": "npm run build"
  },
  "keywords": [],
  "author": "John Grishin <hi@johngrish.in>",
  "license": "MIT",
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!pss)"
    ]
  },
  "size-limit": [
    {
      "path": "./out/index.js",
      "limit": "2 KB"
    }
  ],
  "peerDependencies": {
    "@emotion/react": "^11.0.0",
    "@emotion/styled": "^11.0.0",
    "pss": "^6.0.0",
    "react": "^17.0.0"
  }
}
